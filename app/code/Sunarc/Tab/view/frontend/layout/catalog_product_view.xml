                <arguments>
                    <argument name="title" xsi:type="helper" helper="Sunarc\Tab\Helper\Data::getTabFirstName"></argument>
                </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View" name="custom.tab2" template="Sunarc_Tab::product/view/details/custom_tab_2.phtml" group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="helper" helper="Sunarc\Tab\Helper\Data::getTabTwoName"></argument>
                </arguments>
            </block>
            <block class="Magento\Catalog\Block\Product\View" name="custom.tab3" template="Sunarc_Tab::product/view/details/custom_tab_3.phtml" group="detailed_info">
                <arguments>
                    <argument name="title" xsi:type="helper" helper="Sunarc\Tab\Helper\Data::getTabThreeName"></argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>